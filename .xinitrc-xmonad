[ -f ~/.Xresources ] && xrdb -merge ~/.Xresources

# default cursor
xsetroot -cursor_name left_ptr  

# local fonts
xset +fp /home/ben/.fonts
xset fp rehash

# color temperature
redshift &

# notifications
dunst &

# background image
feh --bg-scale $HOME/.config/wallpaper.jpg

# bar
polybar default &

# composite manager
compton -b

# start window manager
exec xmonad
